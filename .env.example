# RPC Endpoint (use a paid RPC for better performance - Helius, QuickNode, etc.)
RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Target CA to monitor (the token you want to watch for buys)
TARGET_CA=your_token_contract_address_here

# ============================================
# MASTER WALLET (Required)
# ============================================
# This is YOUR wallet that holds the SOL
# The system will auto-generate child wallets and transfer SOL to them
MASTER_WALLET=your_master_wallet_private_key_base58

# ============================================
# WALLET GENERATION SETTINGS
# ============================================
# How much SOL to transfer to each new child wallet
SOL_PER_WALLET=0.3

# Maximum launches per child wallet before generating a new one
MAX_LAUNCHES_PER_WALLET=5

# Minimum SOL to keep in master wallet (safety buffer)
MIN_MASTER_BALANCE=0.5

# ============================================
# BUY DETECTION SETTINGS
# ============================================
# Minimum buy amount (in SOL) to trigger a launch
# Buys below this amount are ignored (anti-spam)
MIN_BUY_SOL=0.15

# Cooldown between launches (milliseconds)
LAUNCH_COOLDOWN_MS=30000

# ============================================
# TOKEN LAUNCH SETTINGS
# ============================================
# These are used for all launched tokens
TOKEN_NAME=Annoying Coin
TOKEN_SYMBOL=ANNOY
DEV_BUY_SOL=0.01
PRIORITY_FEE=0.0005

# ============================================
# SOCIAL LINKS (optional)
# ============================================
TWITTER_URL=https://twitter.com/annoyingcoin
TELEGRAM_URL=
WEBSITE_URL=

# Server port
PORT=3000
